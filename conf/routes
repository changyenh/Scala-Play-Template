#POST          /ServiceSetting              controllers.ServiceSettingApplication.insert2()
#PATCH         /ServiceSetting              controllers.ServiceSettingApplication.update2()
#DELETE        /ServiceSetting/:name        controllers.ServiceSettingApplication.remove2(name)

